<h2><%= t(:newissuealerts_edit, :project => @project.name).html_safe %></h2>
<%= form_for @newissuealert, 
	:as => :newissuealert,
	:method => :post,
	:url => { :project_id => @project.identifier, :id => @newissuealert.id } do |f| %>
  <%= error_messages_for 'newissuealert' %> 
<div class="box tabular settings">
  <p>
    <%= f.label l(:email_addresses) %> <%= f.text_field :mail_addresses, :size => 60 %><br />
    <em><%= l(:email_addresses_comma_separated) %></em>
  </p>
  <p>
   <%= f.label l(:enabled) %> <%= f.check_box :enabled %> 
  </p>
  <p>
    <%= f.label l(:newissuealerts_set_priority) %> <%= f.check_box :priority %>
  </p>
  <p>
    <%= f.label l(:field_tracker) %> <%= f.select :tracker_id, ["All"].collect{|t| [t, -1]} | @project.trackers.collect {|t| [t.name, t.id]}, :required => false %>
  </p>
  <p>
    <%= f.label l(:newissuealerts_subject) %> <%= f.text_field :subject, :size => 255 %>
  </p>
  <p>
    <%= f.label l(:newissuealerts_template) %> <%= f.text_area :template %>
  </p>
  <p>  <%= submit_tag l(:save), :name => "save" %> <%= submit_tag l(:delete), :name => "delete", :confirm => l(:newissuealerts_deletion_confirm) %> </p>
</div>
<% end %>

